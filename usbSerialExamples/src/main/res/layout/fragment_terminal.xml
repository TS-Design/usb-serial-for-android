<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/remoteTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_dark"
            android:paddingRight="10pt"
            android:textSize="30sp"
            android:text="5L Time" />

        <TextView
            android:id="@+id/remoteTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize= "30sp"
            android:paddingRight="10pt"
            android:text="00:00:00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/controlLineTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30sp"


            android:textOff="Test"
            android:textOn="Test" />

        <ToggleButton
            android:id="@+id/controlLineHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30sp"
            android:clickable="false"
            android:textColor="@android:color/secondary_text_dark"
            android:textOff="High"
            android:textOn="High" />



        <View
            android:layout_height="match_parent"
            android:layout_width="6dp" />

        <ToggleButton
            android:id="@+id/controlLineLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30sp"
            android:textOff="Low"
            android:textOn="High" />

        <ToggleButton
            android:id="@+id/controlLineAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:minWidth="30sp"
            android:textColor="@android:color/secondary_text_dark"
            android:textOff="Alarm"
            android:textOn="Alarm" />

        <View
            android:layout_height="match_parent"
            android:layout_width="6dp" />

        <ToggleButton
            android:id="@+id/controlLineCl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:minWidth="30sp"
            android:textColor="@android:color/secondary_text_dark"
            android:textOff="CL"
            android:textOn="CL" />

        <ToggleButton
            android:id="@+id/controlLineWm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30sp"
            android:clickable="false"
            android:textColor="@android:color/secondary_text_dark"
            android:textOff="WM"
            android:textOn="WM" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="?android:attr/listDivider"
        android:layout_height="2dp" />
    <View
        android:layout_width="match_parent"
        android:background="?android:attr/listDivider"
        android:layout_height="2dp" />
    <RadioGroup
        android:id="@+id/_mode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="visible"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/bOFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30sp"
            android:text="Off" />

        <RadioButton
            android:id="@+id/bANR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30sp"
            android:text="ANR" />

        <RadioButton
            android:id="@+id/bSPY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30sp"
            android:text="Spray" />

        <RadioButton
            android:id="@+id/bdrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30sp"
            android:text="Drip" />

        <RadioButton
            android:id="@+id/bdemand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="30sp"
            android:text="Demand" />


    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/_fieldFlush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="20sp"
            android:paddingRight="10pt"
            android:text="Field Flush" />

        <TextView
            android:id="@+id/_recirculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20pt"
            android:textSize="20sp"
            android:textColor="@android:color/secondary_text_dark"
            android:text="Recirculate" />

        <TextView
            android:id="@+id/_peristalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="20sp"
            android:paddingRight="10pt"
            android:text="Peristalic" />

        <TextView
            android:id="@+id/_effpump1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10pt"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="20sp"
            android:text="Eff Pump" />

        <TextView
            android:id="@+id/_effpump2"
            android:layout_width="wrap_content"
            android:paddingRight="10pt"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="20sp"
            android:text="Alt Pump" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/_bhigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20pt"
            android:text="High"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/_balarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20pt"
            android:text="Extn Alarm"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/_blow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="20sp"
            android:paddingRight="10pt"
            android:text="Low" />

        <TextView
            android:id="@+id/_bcl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10pt"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="20sp"
            android:text="Chlorine" />

        <TextView
            android:id="@+id/_bwm"
            android:layout_width="wrap_content"
            android:paddingRight="10pt"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="20sp"
            android:text="Water Meter " />
     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/_effluentlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="20sp"
            android:paddingRight="10pt"
            android:text="Effluent Cycles" />

        <TextView
            android:id="@+id/_effluentcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="20sp"
            android:paddingRight="10pt"
            android:text="0" />
        <TextView
            android:id="@+id/_pumprunlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="20sp"
            android:paddingRight="10pt"
            android:text="Pump Runtime" />

        <TextView
            android:id="@+id/_pumprun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="20sp"
            android:paddingRight="10pt"
            android:text="0" />

        <TextView
            android:id="@+id/_airpressuelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="20sp"
            android:paddingRight="10pt"
            android:text="Air Pressure" />

        <TextView
            android:id="@+id/_airpressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="20sp"
            android:paddingRight="10pt"
            android:text="0" />

    </LinearLayout>


    <TextView
        android:id="@+id/receive_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="false"
        android:enabled="true"
        android:freezesText="true"
        android:gravity="bottom"
        android:scrollbars="vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:typeface="monospace" />

    <Button
        android:id="@+id/receive_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read" />

    <View
        android:layout_width="match_parent"
        android:background="?android:attr/listDivider"
        android:layout_height="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/send_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="text|textNoSuggestions"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_send_white_24dp" />
    </LinearLayout>

</LinearLayout>

