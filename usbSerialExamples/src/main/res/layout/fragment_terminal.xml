<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TerminalLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="50sp"
    android:theme="@style/AppTheme">
    <!--Mode Radio Group-->

    <!--Time-->

    <!--Time,Gallons Labels Here -->

    <!-- Receive Stuff -->

    <RadioGroup
        android:id="@+id/main_mode"
        android:layout_width="445dp"
        android:layout_height="397dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/binit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:minWidth="@dimen/minWidth"
            android:text="Factory"
            android:textSize="@dimen/RadioButtonTextSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/grav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:minWidth="@dimen/ModeButtonMinWidth"
            android:text="Gravity Flow"
            android:textColor="@color/design_default_color_on_primary"
            android:textSize="@dimen/RadioButtonTextSize" />

        <RadioButton
            android:id="@+id/bdmd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:minWidth="@dimen/minWidth"
            android:text="On Demmand Effluent Pumping"
            android:textSize="@dimen/RadioButtonTextSize" />

        <RadioButton
            android:id="@+id/bspy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:minWidth="@dimen/minWidth"
            android:text="Night Spray"
            android:textSize="@dimen/RadioButtonTextSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bbnr" />

        <RadioButton
            android:id="@+id/bmicro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:minWidth="@dimen/minWidth"
            android:text="Micro Time Dose Pump Control"
            android:textSize="@dimen/RadioButtonTextSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bbnr" />

        <RadioButton
            android:id="@+id/bdrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:minWidth="@dimen/minWidth"
            android:text="Drip"
            android:textSize="@dimen/RadioButtonTextSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bspy" />

        <RadioButton
            android:id="@+id/bbnr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:minWidth="@dimen/minWidth"
            android:text="BNR"
            android:textSize="@dimen/RadioButtonTextSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/banr" />

        <RadioButton
            android:id="@+id/banr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:minWidth="@dimen/minWidth"
            android:text="ANR"
            android:textSize="@dimen/RadioButtonTextSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:minWidth="@dimen/minWidth"
            android:text="Manual Operation"
            android:textSize="@dimen/RadioButtonTextSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RadioGroup>

    <Spinner
        android:id="@+id/tankDropDown"
        android:layout_width="166dp"
        android:layout_height="112dp"
        android:paddingLeft="10pt"
        android:paddingRight="10pt"
        android:paddingBottom="10pt"
        android:spinnerMode="dropdown"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/_gallonslabel"
        app:layout_constraintTop_toBottomOf="@+id/_gallonslabel" />

    <TextView
        android:id="@+id/RevNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/UiRevision"
        android:textSize="@dimen/GallonTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_mode" />

    <TextView
        android:id="@+id/timeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingStart="10pt"
        android:paddingEnd="10pt"
        android:text="Time"
        android:textColor="@android:color/secondary_text_dark"
        android:textSize="@dimen/GallonTextSize"
        app:layout_constraintStart_toStartOf="@+id/RevNumber"
        app:layout_constraintTop_toBottomOf="@+id/RevNumber" />

    <TextView
        android:id="@+id/timeRemote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="4dp"
        android:paddingStart="10pt"
        android:paddingTop="1dp"
        android:paddingEnd="10pt"
        android:paddingBottom="10pt"
        android:text="00:00:00"
        android:textColor="@android:color/secondary_text_dark"
        android:textSize="@dimen/GallonTextSize"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeLabel" />

    <TextView
        android:id="@+id/SerialNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="SN 1234567890"
        android:textSize="@dimen/GallonTextSize"
        app:layout_constraintStart_toEndOf="@+id/RevNumber"
        app:layout_constraintTop_toTopOf="@+id/RevNumber" />

    <TextView
        android:id="@+id/_gallonslabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="288dp"
        android:layout_marginTop="24dp"
        android:paddingLeft="10pt"
        android:text=" Tank Size Gallons"
        android:textColor="@android:color/secondary_text_dark"
        android:textSize="@dimen/GallonTextSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_mode" />

    <TextView
        android:id="@+id/receiveText"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="5dp"
        android:clickable="false"
        android:enabled="true"
        android:gravity="bottom"
        android:maxLines="10"
        android:minLines="1"
        android:paddingTop="100pt"
        android:scrollbars="vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tankDropDown"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/hootBug"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="88dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hoot_big" />

</androidx.constraintlayout.widget.ConstraintLayout>

